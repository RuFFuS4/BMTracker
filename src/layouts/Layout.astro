---
import "@fontsource-variable/anybody";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="BMTracker" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>BMTracker</title>
	</head>
	<body>
		<div class = "max-w-6xl px-10 pt-40 mx-auto">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root{
		--primary: #1a202c;
		--secondary: #2d3748;
		--tertiary: #e2e8f0;
		--quaternary: #edf2f7;
		--quinary: #f7fafc;
		--senary: #ffffff;
		--black: #000000;
		--white: #ffffff;
		--gray: #718096;
		--red: #f56565;
		--orange: #f6ad55;
		--yellow: #ecc94b;
		--green: #48bb78;
		--teal: #38b2ac;
		--blue: #4299e1;
		--indigo: #667eea;
		--purple: #9f7aea;
		--pink: #ed64a6;
	}

	.dark{
		--bg: var(--primary);
		--text: var(--white);
		--border: var(--quaternary);
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	html{
		font-family: 'Anybody Variable', system-ui;
		background: #ddd;
	}
</style>
